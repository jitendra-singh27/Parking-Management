<body>
    <section  id="data">
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <form action="/Elect/NewCustRecData" method="post">
                        <h2>Enter Customer Meter Details</h2>
                        <label for="">Customer Name</label>
                        <input type="text" name="name" id="" value="<%=record.name%>" class="form-control" disabled>
                        <label for="">K Number :</label> 
                        <input type="number" name="knumber" id="" value="<%=record.knumber%>" class="form-control" disabled>
                        <label for="">Current Reading :</label> 
                        <div class="input-group">
                        <input type="number" name="creading" id=""  class="form-control"> <span class="input-group-text">KwH</span>
                        </div>
                        <button type="submit" class="btn btn-success form-control mt-2">Updated Reading</button>
                    </form>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </section>

